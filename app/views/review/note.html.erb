<h1>Review#note</h1>
<% if current_user.id == @event.user_id  %>
	
		
		<%= form_tag("/note/#{@event.id}", method: "get") do %>
			<% @participant.each do |p| %>
				<h3><%= p.firstname %></h3>
				<div class="form-group">
					<%= label_tag 'note-'+p.firstname+'', 'Note '+p.firstname+' :' %>
					<%= number_field_tag 'note-'+p.firstname+'', nil, within: 1...6, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag 'message-'+p.firstname+'', 'Commentaire' %>
					<%= text_area_tag 'message-'+p.firstname+'', nil, class: 'form-control' %>    
				</div>
			<% end %>
			<%= submit_tag "Envoyer", class: "btn btn-primary" %>
		<% end %>

<% elsif @participant.include?(current_user)	%>
	<%= form_tag("/note/#{@event.id}", method: "get") do %>
				<h3><%= User.find(@event.user_id).firstname %></h3>
				<p>Note :</p>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="note" id="inlineRadio1" value="1">
				  <label class="form-check-label" for="inlineRadio1">1</label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="note" id="inlineRadio2" value="2">
				  <label class="form-check-label" for="inlineRadio2">2</label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="note" id="inlineRadio3" value="3">
				  <label class="form-check-label" for="inlineRadio3">3</label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="note" id="inlineRadio3" value="4">
				  <label class="form-check-label" for="inlineRadio3">4</label>
				</div>
				<div class="form-check form-check-inline">
				  <input class="form-check-input" type="radio" name="note" id="inlineRadio3" value="5">
				  <label class="form-check-label" for="inlineRadio3">5</label>
				</div>
				<div class="form-group">
					<%= label_tag 'message', 'Commentaire' %>
					<%= text_area_tag 'message', nil, class: 'form-control' %>    
				</div>
			<%= submit_tag "Envoyer", class: "btn btn-primary" %>
	<% end %>
<% end %>
