<h1>Review#note</h1>
<% if current_user.id == @event.user_id  %>
	
		
		<%= form_tag("/note/#{@event.id}", method: "get") do %>
			<% @participant.each do |p| %>
				<h3><%= p.firstname %></h3>
				<div class="form-group">
					<%= label_tag 'note-'+p.firstname+'', 'Note '+p.firstname+' :' %>
					<%= number_field_tag 'note-'+p.firstname+'', nil, within: 1...6, class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= label_tag 'message-'+p.firstname+'', 'Commentaire' %>
					<%= text_area_tag 'message-'+p.firstname+'', nil, class: 'form-control' %>    
				</div>
			<% end %>
			<%= submit_tag "Envoyer", class: "btn btn-primary" %>
		<% end %>
	
<% end %>
