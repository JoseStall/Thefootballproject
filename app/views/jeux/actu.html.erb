<section class="slice-sm sct-color-1">
	<div class="container">
		<h2 style="margin-bottom: 50px">Les actus fraîches de la coupe du monde 2018 :</h2>

		<div class="row">

		<% @rss_results.shuffle.each do |article| %>
          <div class="col-md-4">
			<img src="<% article[:image] %>" alt="" style="width: 100px; height: 100px">

				<a href="<%= article[:link] %>">
					<h4>
						<strong><%= article[:title] %></strong>
					</h4>
				</a>
				
				<small>
					<p> <%= article[:date].strftime('Publié le: %F') %>
						<a href="<%= article[:link] %>">
							
						</a>
					</p>
				</small>
				<p style='height: 200px; overflow: hidden;'>
					<%= article[:description].truncate(200) %>
				</p>
			</div>
		
		<% end %>
		</div>
	</div>
</section>
