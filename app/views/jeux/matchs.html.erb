<div class="form-group">
    <label for="chooseteam">Team</label>
    <select class="form-control" id="chooseteam">
        <option>Choisir une equipe</option>
        <% @games.each do |game| %>
        <option><%= game.home_team.name %></option>
        <% end %>
    </select>
</div>

<%= form_tag("/jeux/matchs", method: "get") do %>
    <%= select_tag 'team', options_for_select(Game.all.collect{ |u| [u.home_team.name, u.id] }) %>
    <%= submit_tag("Search") %>
<% end %>

