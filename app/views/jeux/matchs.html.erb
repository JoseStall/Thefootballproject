<%= select("game.id", "game.date", Game.all.collect {|p| [ p.date, p.id ] }, {prompt: 'Selectioner une date'}) %>
<%= select("game.id", "game.date", Game.all.collect {|p| [ p.home_team.name, p.id ] }, {prompt: 'Selectioner une équipe'}) %>


<div id="my-signin2" class="g-signin" data-onsuccess="onSignIn">bouton</div>

<table class="table">


    <thead>
        <tr>
            <th> N° </th>
            <th>date</th>
            <th>Drapeau</th>
            <th>Equipe</th>
            <th>Score</th>
            <th>Equipe</th>
            <th>Drapeau</th>

        </tr>
    </thead>


    <tbody>
        <% @games.each do |game| %>

        <tr>
            <td><%= game.id %></td>
            <td><%= game.date %></td>
            <td><img style='width: 35px; height: auto' src="<%= game.home_team.flag %>"></td>
            <td><%= game.home_team.name %></td>
            <td> 0 - 0 </td>
            <td><%= game.visiting_team.name %></td>
            <td><img style='width: 35px; height: auto' src="<%= game.visiting_team.flag %>"></td>
            <td> <%= link_to 'Créer un événement pour ce match', event_path(game.id) %> </td>
        </tr>
        <% end %>
    </tbody>
</table>
 


