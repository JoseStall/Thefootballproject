<section class="slice-lg has-bg-cover bg-size-cover" style="background-image: url(<%= asset_path 'soccer/the-ball-488714_1920.jpg' %>); background-position: bottom center">
  <div class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div class="form-header-icon">
              <i class="fa fa-user"></i>
            </div>
          </div>
          <div class="form-body">
            <div class="text-center px-2">
              <h4 class="heading heading-4 strong-400 mb-4">Modifier mon profil</h4>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group has-feedback">
                 <%= f.label :Prénom %><br />
                 <%= f.text_field :firstname, autocomplete: "off",  class: 'form-control form-control-lg' %>
               </div>
             </div>

             <div class="col-md-6">
              <div class="form-group has-feedback">
               <%= f.label :Nom %><br />
               <%= f.text_field :lastname, autocomplete: "off", placeholder: "Votre nom",  class: 'form-control form-control-lg' %>
             </div>
           </div>
         </div>

         <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Adresse e-email ", class: 'form-control form-control-lg' %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group has-feedback">
             <%= f.label :phone, 'Téléphone' %>
             <%= f.text_field :phone_number, placeholder: "Téléphone", class: 'form-control form-control-lg' %>
           </div>
         </div>
       </div>
       <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
       <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
       <% end %>


       <div class="row">
        <div class="col-md-6">
          <div class="form-group has-feedback">
            <%= f.label :Nouveau_mot_de_passe %>
            <small>(si vous souhaitez changer de mot de passe)</small>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg'%>
            <% if @minimum_password_length %>

            <small><%= @minimum_password_length %> caractéres minimum</small>
            <% end %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group has-feedback">
           <%= f.label :Confirmation_mot_de_passe %><br />
                      <% if @minimum_password_length %>

            <small><%= @minimum_password_length %> caractéres minimum</small>
            <% end %>
           <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg' %>

         </div>
       </div>
     </div>
     <div class="row">
       <div class="col-md-6">
        <div class="form-group has-feedback">
          <%= f.label :mot_de_passe_actuel %><br>
          <small>(Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</small>
          <%= f.password_field :current_password, autocomplete: "off", value: :current_password, class: 'form-control form-control-lg' %>
        </div>
      </div>
    </div>
    <%= f.submit "Enregistrer", class:"btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
    <% end %>
    <div class="text-center px-2">
      <h4 class="heading heading-4 strong-400 mb-4 mt-4">Supprimer mon compte</h4>
    </div>

    <%= button_to "Supprimer mon compte",registration_path(resource_name), class:"btn btn-styled btn-lg btn-block btn-base-1 mt-4 mb-4 btn-danger", data: { confirm: "Êtes-vous sûr?" }, method: :delete %>

    <%= link_to "Retour", :back %>
  </div>
</div>
</div>
</div>
</div>
</section>
