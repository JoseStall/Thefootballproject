<%= form_with(model: bar, local: true) do |form| %>
  <% if bar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bar.errors.count, "error") %> prohibited this bar from being saved:</h2>

      <ul>
      <% bar.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <br>
  
<div class="field">
    <p>Quelques images de toi, ta passion pour le foot et ton installation de rêve pour mater le match? </p>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>
 
 <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, direct_upload: true %>
  </div>

  <div class="field">
    <p>Quelle installation y a-t-il pour mater les matchs? Télé(s), vidéoproj(s)? </p>
    <%= form.label :screen %>
    <%= form.text_field :screen %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <br>

  <div class="field">
    <p>A combien estime-tu la capacité d'accueil du bar? </p>
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>
<br>
  <div class="field">
    <p>Combien coûte la pinte? </p>
    <%= form.label :pint_price %>
    <%= form.text_field :pint_price %>
  </div>

  <div class="actions">
    <%= form.submit value: "Crée ton bar" %>
  </div>
<% end %>
