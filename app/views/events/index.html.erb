<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Match</th>
      <th>Organisateur</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= Game.find(event.game_id).home_team.name %> VS <%= Game.find(event.game_id).visiting_team.name %></td>
        <td><%= User.find(event.user_id).email %> <%= User.find(event.user_id).lastname %></td>
        <td><%= event.description %></td>
        <td><%= Game.find(event.game_id).date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

