<!-- Begin section Slide et search -->

<section class="sct-color-1 border-bottom">
    <div class="container-fluid no-padding">
        <div class="row row-no-padding">
            <div class="col-lg-8">
                <div class="swiper-js-container background-image-holder">
                    <div class="swiper-container" data-swiper-items="1" data-swiper-effect="coverflow" data-swiper-space-between="0" data-swiper-sm-items="1" data-swiper-sm-space-between="0" data-swiper-xs-items="1" data-swiper-xs-space-between="0">
                        <div class="swiper-wrapper">
                            <!-- Slide -->
                            <div class="swiper-slide">
                                <div class="slice holder-item holder-item-light has-bg-cover bg-size-cover same-height" data-same-height="#div_properties_search" style="background-image: url(<%= asset_path 'prv/real-estate/img-slider-1.jpg' %>); background-position: bottom bottom;">
                                    <span class="mask mask-dark--style-2"></span>
                                    <div class="container d-flex align-items-center no-padding">
                                        <div class="col">
                                            <div class="row row-cols-xs-spaced align-items-center text-center text-md-left">
                                                <div class="col-12 col-lg-9">
                                                    <div class="px-5">
                                                        <h2 class="heading heading-2 strong-500 c-white">
                                                           Trouver un lieu pour regarder les matchs

                                                       </h2>
                                                       <p class="lead mt-4 c-white">
                                                        Vous ne savez pas où regarder le prochain match de la coupe du monde ? 
                                                        <br>
                                                        <br>
                                                        Pas de problème, nous nous chargeons de vous proposer une liste des lieux d'accueil dans votre ville. 
                                                        <br>
                                                        Des bars, restaurants et particuliers vous proposeront de vous accueillir pour vibrer au son de la Coupe Du Monde !
                                                    </p>

                                                    <a href="<% events_path %>" class="btn btn-styled btn-white btn-circle mt-4" data-scroll-to="#scrollToSection">Trouver un bar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Slide -->
                        <div class="swiper-slide">
                            <div class="slice holder-item holder-item-light has-bg-cover bg-size-cover same-height" data-same-height="#div_properties_search" style="background-image: url(<%= asset_path 'prv/real-estate/img-slider-2.jpg' %>); background-position: bottom bottom;">
                                <span class="mask mask-dark--style-2"></span>
                                <div class="container d-flex align-items-center no-padding">
                                    <div class="col">
                                        <div class="row row-cols-xs-spaced align-items-center text-center text-md-left">
                                            <div class="col-12 col-md-9">
                                                <div class="px-5">
                                                    <h2 class="heading heading-2 strong-500 c-white">
                                                        Les événements 
                                                    </h2>
                                                    <p class="lead mt-4 c-white">
                                                        Vous souhaitez organiser un événement pour un bar, que ce soit chez vous ou dans un autre endroit ? 
                                                        <br>
                                                        Proposez votre event pour que les gens dans votre ville y participent ! 
                                                    </p>

                                                    <a href="<%= new_event_path %>" class="btn btn-styled btn-white btn-circle mt-4">Proposer un event</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>

        <div class="col-lg-4" id="div_properties_search">
            <div class="card no-radius no-border">
                <div class="card-title card-title-wrapped">
                    <h3 class="heading heading-5 strong-500 text-capitalize">Trouver un événement</h3>
                </div>

                <div class="card-body py-4 px-4">
                    <%= form_tag(result_path, method: "get") do %>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group has-feedback">
                                <label>Sélectionner un pays</label>
                                <%= select_tag 'team', options_for_select(Team.all.collect{ |u| [u.name, u.id] }, :selected), class: 'form-control form-control-lg selectpicker' %>
                                <span class="help-block with-errors"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div  class="form-group has-feedback">
                                <label>Entrez une adresse</label>
                                <%= text_field_tag 'adress', nil, class: 'form-control form-control-lg', id: 'autocomplete' %>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>

                    <%= submit_tag "Rechercher", class: "btn btn-styled btn-block btn-lg btn-base-1 mt-4" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

<!-- Begin section Slide et search -->

<!-- Section BAR -->
<section class="slice sct-color-1" id="scrollToSection">
    <div class="container">
        <div class="section-title section-title--style-1 text-center mb-1">
            <h3 class="section-title-inner heading-sm strong-600 text-uppercase">
                <span>Les bars</span>
            </h3>
            <span class="section-title-delimiter clearfix d-none"></span>
        </div>

        <span class="clearfix"></span>

        <div class="fluid-paragraph fluid-paragraph-sm c-gray-light strong-300 text-center">
            Ces bars diffuseront des matchs. Renseignez vous sur leur équipement, la capacité, ou encore le prix de la pinte !
        </div>

        <span class="space-xs-lg"></span>

        <div class="row-wrapper">
            <div class="row cols-md-space">
                <!-- Begin First loop bar -->
                <% Bar.ids.sample(4).each do |b| %>
                <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                    <div class="block block--style-3">
                        <div class="block-image relative">
                            <div class="view view-first">
                                <a href="<%= bar_path(b) %>">
                                    <% if Bar.find(b).images.attached? %>
                                        <% image = Bar.find(b).images.first %>
                                        <%= image_tag(image, style:'width:300;height:190', class:'img-responsive') %>
                                    <% else %>
                                        <img src="https://s3.eu-west-3.amazonaws.com/rails-chaton/nopic.svg" width="300" height="190" class="img-responsive">
                                    <% end %>
                                    
                                </a>
                            </div>
                            <span class="block-price-over bg-base-4"><%= Bar.find(b).name %></span>
                        </div>

                        <div class="block-body text-center mt-1">
                            <h3 class="heading heading-5 strong-400 text-normal mb-1">
                                <strong><%= Bar.find(b).address %></strong>
                            </h3>
                        </div>

                        <div class="aux-info-wrapper border-top">
                            <ul class="aux-info">
                                <li class="heading strong-400 text-center">
                                    <i class="icon-food-002"></i> <%= Bar.find(b).pint_price %>
                                </li>
                                <li class="heading strong-400 text-center">
                                    <i class=" icon-real-estate-017"></i><%= Bar.find(b).capacity %> personnes
                                </li>
                                <li class="heading strong-400 text-center">
                                    <i class="icon-hotel-restaurant-013"></i> <%=Bar.find(b).screen[0..30] %>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <% end %> 
            </div>
            <!-- End first loop bar -->
            <!-- Begin Second loop bar -->
            <div class="row cols-md-space">
                <!-- Begin First loop bar -->
                <% Bar.ids.sample(4).each do |b| %>
                <div class="col-lg-3 col-md-6 col-sm-12 col-12">
